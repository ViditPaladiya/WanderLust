<div class="row row-cols-lg-3 row-cols-md-2  row-cols-sm-1  g-4">                <!-- row-col-lg-3 making Row div to show only 3 cards in each row -->

<% for( let listing of allListings) { %>
 <a href="/listings/<%= listing._id %>" class="listing-link">           <!--  handling whole card clicking anywhere on the card  -->
<div class="card col listing-card">
  <img src= "<%=listing.image.url%>" class="card-img-top" alt="listing_image" style="height: 20rem;"/>
  <div class="card-img-overlay"></div>     <!--Bootstrap class to get text or any icon on card's image -->
  <div class="card-body">
    <p class="card-text"> 
     <b> <%= listing.title %></b>  <br>
     &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "Price not available" %> / Night
    </p>
  </div>
</div>
</a>

<% } %>


</div>
<br>

</body>

